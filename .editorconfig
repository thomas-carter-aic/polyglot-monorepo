# Top-most EditorConfig file
root = true

# ─────────────────────────────
# Default settings
# ─────────────────────────────
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ─────────────────────────────
# Bazel / Starlark
# ─────────────────────────────
[*.{bazel,bzl,BUILD,WORKSPACE,MODULE.bazel}]
indent_style = space
indent_size = 2

# ─────────────────────────────
# Go
# ─────────────────────────────
[*.go]
indent_style = tab
indent_size = 4

# ─────────────────────────────
# Python
# ─────────────────────────────
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88  # matches black

# ─────────────────────────────
# Java
# ─────────────────────────────
[*.java]
indent_style = space
indent_size = 4

# ─────────────────────────────
# JavaScript / TypeScript
# ─────────────────────────────
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# ─────────────────────────────
# JSON / YAML
# ─────────────────────────────
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# ─────────────────────────────
# Markdown
# ─────────────────────────────
[*.md]
trim_trailing_whitespace = false
